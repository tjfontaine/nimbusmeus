div(data-role='page')
  div(data-role='header')
    h1= title
  div(data-role='content')
    ul(data-role='listview')
      each dir in dirs
        li
          a(href='/b/#{dir.path}')= dir.name
      each file in files
        li
          a(href='/v/#{file.path}')= file.name
  div(data-role='footer')
    a(href='/settings', data-rel='dialog') Settings
