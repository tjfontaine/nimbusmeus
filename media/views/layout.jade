!!!
html
  head
    title= title
    meta(name='viewport', content='width=device-width, initial-scale=1')
    link(rel='stylesheet', href='/stylesheets/style.css')
    link(rel='stylesheet', href='/stylesheets/jquery.mobile.css')
    script(src='/js/jquery-1.7.2.js')
    script(src='/js/jquery.mobile.js')
  body
    div(data-role='page', data-add-back-btn='true', data-position='fixed', data-title='#{title}')
      div(data-role='header')
        h1= title
      div(data-role='content')
        block content
      div(data-role='footer', data-position='fixed')
        div(data-role='navbar')
          ul
            li
              a(href='/media/', data-icon='home') Home
            li
              a(href='/media/settings', data-icon='gear') Settings
            li
              a(href='/media/nowplaying', data-icon='star') Now Playing
